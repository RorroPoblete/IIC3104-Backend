# Servicio Health
NODE_ENV=development
PORT=3000
FRONTEND_ORIGIN=http://localhost:8000

# PostgreSQL (datos maestros e histórico)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/healthdb

# Redis (caché de validaciones)
REDIS_URL=redis://localhost:6379

# Configuración de JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Configuración de los microservicios
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
PRODUCT_SERVICE_PORT=3003
CODIFICATION_SERVICE_PORT=3004

# Configuración de logs
LOG_LEVEL=info

# Configuración del servicio de codificación
UPLOAD_PATH=/tmp/uploads
MAX_FILE_SIZE=10485760
CORS_ORIGIN=http://localhost:8000
