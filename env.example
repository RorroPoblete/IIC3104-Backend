# Servicio Health
NODE_ENV=development
PORT=3000

# PostgreSQL (datos maestros e histórico)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/healthdb

# Redis (caché de validaciones)
REDIS_URL=redis://localhost:6379

# Configuración de JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Configuración de los microservicios
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
PRODUCT_SERVICE_PORT=3003

# Configuración de logs
LOG_LEVEL=info

AUTH0_DOMAIN=dev-xxxxx.us.auth0.com
AUTH0_AUDIENCE=https://uc-grd-api
AUTH0_CLIENT_ID=TU_CLIENT_ID_DE_AUTH0
