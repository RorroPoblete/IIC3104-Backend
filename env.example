# Servicio Health
NODE_ENV=development
PORT=3000

# PostgreSQL (datos maestros e histórico)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/healthdb

# Redis (caché de validaciones)
REDIS_URL=redis://localhost:6379

# Configuración de los microservicios
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
PRODUCT_SERVICE_PORT=3003
CORS_ORIGIN=http://localhost:8000

# Configuración de logs
LOG_LEVEL=info

# Configuración de Auth0 (reemplazar con credenciales reales)
AUTH0_DOMAIN=YOUR_AUTH0_DOMAIN
AUTH0_AUDIENCE=YOUR_AUTH0_AUDIENCE
AUTH0_CLIENT_ID=YOUR_AUTH0_CLIENT_ID

# Configuración de JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
